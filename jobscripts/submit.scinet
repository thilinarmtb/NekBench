#!/bin/bash

case=$1
test_type=$2
nprocs=$3
ppn=$4 # processes per node

# Cori KNL specific settings
ncpus=$(( 40/ppn )) # floor of 272/ppn

echo $case     >  SESSION.NAME
echo `pwd`'/' >>  SESSION.NAME
touch $case.rea
rm -f ioinfo
mv -f $case.his $case.his1
mv -f $case.sch $case.sch1

#run the application:
srun -n $nprocs -c $ncpus --cpu_bind=cores ./nek5000 > ${case}.log.${test_type}.${nprocs} 2>&1
